<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="2"
    android:background="@drawable/background_primary"
    tools:context=".SelectReport">



        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/kiki"

            />



 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <LinearLayout
         android:paddingTop="20dp"
         android:scrollbars="vertical"

         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:orientation="vertical">



         <Button
             android:id="@+id/button1"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:text="Pending reports"
             android:textColor="#FFFFFF"
             android:background="@drawable/custom_button"
             android:padding="15dp"
             android:onClick="openReportView"
             android:layout_gravity="center_horizontal"/>


         <Button
             android:id="@+id/button2"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:text="ongoing reports"
             android:textColor="#FFFFFF"
             android:background="@drawable/custom_button"
             android:layout_marginTop="16dp"
             android:onClick="openOnGoing"
             android:padding="15dp"
             android:layout_gravity="center_horizontal"/>


         <Button
             android:id="@+id/button3"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:text="Completed Reports"
             android:textColor="#FFFFFF"
             android:background="@drawable/custom_button"
             android:padding="15dp"
             android:layout_marginTop="16dp"
             android:onClick="openCompleted"
             android:layout_gravity="center_horizontal"/>

         <Button
             android:id="@+id/button4"
             android:layout_width="200dp"
             android:layout_height="wrap_content"
             android:text="Incompleted Reports"
             android:textColor="#FFFFFF"
             android:background="@drawable/custom_button"
             android:padding="15dp"
             android:layout_marginTop="16dp"
             android:onClick="openIncompleted"
             android:layout_gravity="center_horizontal"/>

         <TextView
             android:id="@+id/EmployeeName"
             android:layout_marginTop="20dp"
             android:layout_gravity="center_horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Employee Name:"
             android:visibility="invisible"
             android:textSize="18dp"/>

         <TextView
             android:id="@+id/EmployeeEmail"
             android:layout_marginTop="10dp"
             android:layout_gravity="center_horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Employee Email:"
             android:visibility="invisible"
             android:textSize="18dp"/>

         <TextView
             android:id="@+id/EmployeePhone"
             android:layout_marginTop="10dp"
             android:visibility="invisible"
             android:layout_gravity="center_horizontal"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Employee Phone:"
             android:layout_marginBottom="20dp"
             android:textSize="18dp"/>



     </LinearLayout>
 </ScrollView>

</LinearLayout>